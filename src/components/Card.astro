---
interface Props {
    title: string
    url?: string
    tags: string[]
}

const { title, url = "#", tags = [] } = Astro.props;
---

<div class="group">
    <a
        href={url}
        class="block max-w-sm p-6 bg-zinc-900/50 border border-zinc-800 rounded-2xl 
               transition-all duration-300 ease-out
               hover:border-blue-500/50 hover:bg-zinc-900 
               hover:shadow-[0_0_30px_rgba(59,130,246,0.1)] 
               hover:-translate-y-1 active:scale-[0.98]"
    >
        <h5 class="mb-3 text-xl font-bold tracking-tight text-white group-hover:text-blue-400 transition-colors">
            {title}
        </h5>
        
        <div class="text-zinc-400 text-sm leading-relaxed mb-4">
            <slot />
        </div>

        <div class="flex flex-wrap gap-2 mb-6">
            {tags.map((tag) => (
                <span class="px-2 py-1 text-[10px] font-medium uppercase tracking-wider text-zinc-400 bg-zinc-800/50 border border-zinc-700/50 rounded-md group-hover:border-blue-500/30 group-hover:text-zinc-300 transition-colors">
                    {tag}
                </span>
            ))}
        </div>

        <div class="flex items-center gap-2 text-xs font-mono text-blue-500/80 group-hover:text-blue-400">
            <span>View</span>
            <svg xmlns="http://www.w3.org/2000/svg" class="w-4 h-4 transform group-hover:translate-x-1 transition-transform" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
            </svg>
        </div>
    </a>
</div>