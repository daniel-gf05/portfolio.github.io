---
interface Props {
    title: string;
    img: string;
}
const { title, img } = Astro.props;
---

<div
    class="flex flex-col items-center mt-20 md:mt-32 px-6 max-w-5xl mx-auto gap-8 md:gap-16"
>
    <div class="text-center">
        <h1 class="text-3xl md:text-5xl font-bold text-heading">{title}</h1>
    </div>

    <div
        class="flex flex-col-reverse md:flex-row items-center justify-center gap-8 md:gap-12 w-full"
    >
        <div class="text-lg leading-relaxed text-pretty max-w-prose">
            <slot />
        </div>

        <div class="shrink-0">
            <img
                src=`/${img}`
                alt={title}
                class="w-64 md:w-80 rounded-2xl shadow-2xl border border-white/10 object-cover"
            />
        </div>
    </div>
</div>
