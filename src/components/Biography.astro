---
interface Props{
    title:string
    img:string
}
const { title, img } = Astro.props;
---

<div class="flex flex-col items-center mt-25 text-xl gap-10 m-150">
    <div><h1 class="text-4xl font-bold">{title}</h1></div>
   <div class="flex gap-5"><slot /> <img src=`/public/${img}` alt="image" class="w-80" /></div>
</div>
