---
import Card from "../../components/Card.astro";
import Layout from "../../layouts/Layout.astro";
import data from "../../data/certificates.json"

interface Certificate {
    title: string;
    url: string;
    tags: string[];
}

// const response = await fetch(new URL("/api/certificatesApi", Astro.url));
// const data: Certificate[] = await response.json();

console.log("Certificates: ", data);
---

<Layout title="Certificates">
    <div class="flex justify-center mt-25 font-bold text-4xl h-full">
        <div><h1>Certificates</h1></div>
    </div>

    <div class="flex flex-wrap mx-40 gap-5 mt-10">
        {data.map((c) => <Card title={c.title} url={c.url} tags={c.tags} />)}
    </div>
</Layout>
